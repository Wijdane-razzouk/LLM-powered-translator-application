{
  "name": "Darija Translator",
  "description": "English to Darija AI Translator with Voice Support",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["sidePanel", "activeTab", "storage", "audioCapture"],
  "host_permissions": [
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Darija Translator"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
